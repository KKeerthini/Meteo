<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/appwidget_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/five"
        android:layout_margin="8dp"
        android:background="#09C"
        android:contentDescription="@string/appwidget_city"
        android:text="@string/appwidget_city"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
    
    <ImageView
        android:id="@+id/weather_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five"
        android:src="@drawable/clearclouds"
        android:layout_below="@+id/appwidget_city"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/weather_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/appwidget_city"
        android:layout_toRightOf="@+id/weather_image"
        android:layout_margin="@dimen/five"
        android:background="#09C"
        android:text="@string/appwidget_city"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>